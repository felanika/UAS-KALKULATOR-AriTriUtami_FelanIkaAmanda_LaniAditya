<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6D3F4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/solution_tv"
        android:layout_margin="16dp"
        android:paddingVertical="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64sp" />

    <GridLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:columnCount="4"
        android:rowCount="6"
        android:background="#FBFAFB"
        android:padding="16dp">

        <!-- Define buttons here -->
        <!-- First row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_sqrt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:text="√"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_pi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:text="π"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_power"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:text="^"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_factorial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:text="!"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <!-- Second row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_ac"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#9CD19F"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_brackets"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#6CBCEC"
            android:text="()"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#6CBCEC"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#6CBCEC"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <!-- Third row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_multiply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#6CBCEC"
            android:text="*"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <!-- Fourth row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#6CBCEC"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <!-- Fifth row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_plus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#6CBCEC"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <!-- Sixth row -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:text="0"
            android:backgroundTint="#D1D1D3"
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_comma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text=","
            android:textColor="@color/black"
            android:textSize="32sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#D1D1D3"
            android:text="DEL"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#6CBCEC"
            android:text="="
            android:textColor="@color/black"
            android:textSize="32sp" />

    </GridLayout>
</RelativeLayout>